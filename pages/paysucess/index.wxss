/* pages/afterpayment/afterpayment.wxss */

page {
  background-color: #f7f7f7;
}

/* 支付状态 */

.paystatus-box {
  width: 100%;
  height: 190rpx;
  background: linear-gradient(90deg, rgba(253, 109, 1, 1), rgba(252, 152, 3, 1));
  display: flex;
  align-items: center;
}

.paystatus-icon {
  flex: 0 0 90rpx;
  height: 90rpx;
  margin-left: 68rpx;
}

.paystatus-icon>image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.paystatus-text {
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
  line-height: 37rpx;
  margin-left: 20rpx;
}

.text01 {
  font-weight: 500;
  font-size: 32rpx;
}

.text02 {
  font-weight: 300;
  font-size: 26rpx;
}

/* 支付后操作 */

.after-btn {
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.after-btn-text {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(89, 89, 89, 1);
  line-height: 30rpx;
}

.after-btn-btn {
  text-align: right;
}

.after-btn-btn>navigator {
  margin-top: 40rpx;
  display: inline-block;
  width: 150rpx;
  height: 54rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  line-height: 54rpx;
  text-align: center;
  border-radius: 27px;
}

.btn-toindex {
  color: rgba(156, 156, 156, 1);
  border: 1px solid rgba(156, 156, 156, 1);
}

.btn-toorder {
  color: #fd6d01;
  border: 1px solid #fd6d01;
  margin-left: 20rpx;
}

/* 商品展示 */

.prolist {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 1);
}

.pro-item {
  padding: 34rpx 30rpx 30rpx;
  border-bottom: 1rpx solid rgba(247, 247, 247, 1);
}

.pro-shop {
  font-size: 0;
}

.shop-logo {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  vertical-align: top;
}

.shop-name {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 30rpx;
  margin-right: 20rpx;
}

.shop-arrow {
  width: 10rpx;
  height: 18rpx;
}

.pro-detail {
  margin-top: 23rpx;
  display: flex;
}

.pro-img {
  flex: 0 0 180rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10px;
  overflow: hidden;
}

.pro-img>image {
  width: 100%;
}

.pro-attr {
  flex: 1;
  margin-left: 24rpx;
}

.pro-text {
  display: flex;
}

.pro-name {
  flex: 0 0 311rpx;
  width: 311rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.pro-value {
  flex: 1;
  text-align: right;
}

.pro-price {
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 30rpx;
}

.pro-num {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(156, 156, 156, 1);
  line-height: 30rpx;
}

.pro-sku>text {
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
  height: 30rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 4rpx;
  padding: 0 17rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

/* 金额 优惠 运费支付方式 */

.additional-box {
  padding: 29rpx 30rpx 0;
  background: rgba(255, 255, 255, 1);
}

.additional-item {
  display: flex;
  padding-bottom: 30rpx;
}

.additional-item-name {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 43rpx;
}

.additional-item-value {
  flex: 1;
  text-align: right;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(89, 89, 89, 1);
  line-height: 43rpx;
}

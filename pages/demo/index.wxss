/* pages/demo/index.wxss */

.tag__box {
  display: flex;
}
.tag__item {
  width: 60px;
  height: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: wrap;
}
.active__tag {
  background: #f60;
  color: #fff;
  color: #666;
}
.goods__item {
  display: flex;
  flex-direction: column; 
}
.item__top{
  display: flex;
  flow-direction: row
}
.img {
  display: inline-block;
  width: 90px;
  height: 60px;
  margin-right: 6rpx;
}


.desc__top {
  display: flex;
  flow-direction:row;
}
.title {
  width: 60%;
  font-size: 12px;
  color: #666;
}

.extra {
  margin-left: 4px;
}
.price {
  display: block;
  font-size: 14px;
  color: #333;
}
.count {
  display: block;
  font-size: 12px;
  color: #666;
}

.tag {
  border-radius: 5rpx;
  background: #ccc;
  color: #333;
  padding: 5rpx;
  margin-left: 5rpx;
  font-size: 12px;
}


.item__bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.status {}
.view__detail { 
  color: #666;
}
<import src="../../template/template"/>
<view class="container">
  <template is="sale_top" data="{{detailSale}}"></template>
  <!-- 退款成功失败金额 -->
   <view class="detail_money">
        <view class="money_item">
            <text class="money_label">{{labelList.returnMoney}}</text>
            <text class="money_price">￥{{detailSale.detail.returnMoney}}</text>
        </view>
        <navigator url="/pages/order/logistics/index" hover-class="no" class="money_item" wx:if="{{detailSale.tab==3||detailSale.tab==4}}">
            <text class="money_label">{{labelList.returnLogistics}}</text>
            <image src="../../../images/returnRight.png"></image>
        </navigator>
        <view class="money_item clear_border" wx:if="{{detailSale.tab==4}}">
           <text class="money_label">{{labelList.returnAccount}}</text>
            <text class="money_price">支付账号原路返回</text>
        </view>
        <template is="return_address" data="{{returnInfo}}" wx:if="{{detailSale.tab==2}}"></template>
   </view>
   
   <!-- 退款店铺产品 -->
   <template is="returnItem" data="{{returnItem}}"></template>

   <!-- 退款成功  原因之类的 -->
   <view class="product_bottom">
        <view class="product_item">
           <text class="product_label">{{labelList.returnReson}}</text>
           <text class="product_info">{{detailSale.detail.returnReson}}</text>
        </view>
         <view class="product_item">
           <text class="product_label">{{labelList.payMoney}}</text>
           <text class="product_info">￥{{detailSale.detail.payMoney}}</text>
        </view>
         <view class="product_item">
           <text class="product_label">{{labelList.returnMoney}}</text>
           <text class="product_info">￥{{detailSale.detail.returnMoney}}</text>
        </view>
         <view class="product_item">
           <text class="product_label">{{labelList.applyTime}}</text>
           <text class="product_info" decode="true">{{detailSale.detail.applyTime}}</text>
        </view>
         <view class="product_item" wx:if="{{detailSale.tab==3||detailSale.tab==4}}">
           <text class="product_label">{{labelList.returnTime}}</text>
           <text class="product_info" decode="true">{{detailSale.detail.returnTime}}</text>
        </view>
         <view class="product_item" wx:if="{{detailSale.tab==4}}">
           <text class="product_label">{{labelList.successTime}}</text>
           <text class="product_info" decode="true">{{detailSale.detail.successTime}}</text>
        </view>
         <view class="product_item">
           <text class="product_label">{{labelList.returnOrder}}</text>
           <text class="product_info">{{detailSale.detail.returnOrder}}</text>
        </view>
   </view>
   <!-- 退款失败的按钮 -->
   <view class="product_back" wx:if="{{detailSale.tab==2}}">
       <navigator hover-class="no" url="../return/index" class="product_agin">去退货</navigator>
   </view>
</view>
.upload__bottom {display: flex; flex-flow: wrap; justify-content: flex-start; margin-left: -10px;margin-top: -15px;padding-bottom: 15px;}
.upload__item {width:140rpx;height:140rpx;border-radius: 10rpx; position: relative; margin-left: 15px;margin-top:15px;}
.upload__item .close{position: absolute; top: -10px; right: -5px; }
.upload__item .close .close_img {
   width: 34rpx; height: 34rpx;
  display: inline-block;
}
.upload__item .img {width: 140rpx; height: 140rpx;}
.upload__bottom .photo__bg {background: #EFF1F3; border-radius: 10rpx; display: flex; justify-content: center; align-items: center; width: 140rpx; height: 140rpx; margin-left: 10px;margin-top: 15px;}

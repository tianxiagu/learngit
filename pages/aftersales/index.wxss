/* pages/aftersales/index.wxss */
.after__wrap {
  height: 100vh;
  background: #f5f5f5;
}
.goods__item {
  display: flex;
  flex-direction: column; 
  background: #fff;
  margin-bottom: 10px;
}
.item_wrap {
  background: #fff;
}
.item__top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 15px;
}
.item_pic{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: linear-gradient(-90deg,#fd7601,#fd8f02);
}
.top__img {
  width: 100%;
  height: 100%;
  vertical-align: top;
  border-radius: 50%;
}
.top__name {
  font-size: 24rpx;
  font-weight: 500;
  display: inline-block;
  padding: 0 3px;
  margin: 0 3px;
}
.top__arrow {  
  display: inline-block;  
  width: 10rpx;
  height: 18rpx;
}

.item__main{
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 15px 15px 15px;
  width: 100%;
}
.img {
  display: block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 5px;
  margin-right: 6rpx;
}

.desc {
  /* width: 100%; */
  width: 70%;
}

.desc__top {
  display: flex;
  flex-direction:row;
  justify-content: space-between;  
}
.title {
  width: 100%;
  height:53rpx;
  font-size:14px;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,9,22,1);
  margin-left: 5px;
}

.extra {
  margin-left: 4px;
}
.price {
  display: block;
  font-size: 20rpx;
  font-weight: 500;
  color: #333;
}
.count {
  display: block;
  font-size: 22rpx;
  color: #9c9c9c;
  text-align: right;
}
.tags {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-left: 2px;
  flex-wrap: wrap;
}
.tag {  
  width:72rpx;
  height:30rpx;
  text-align: center;
  background:rgba(245,245,245,1);
  border-radius:4px;
  font-size: 20rpx;
  font-weight: 500;
  margin-left: 6px;
  margin-bottom: 10rpx;
  padding: 5rpx 8rpx;
}
.reason {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  text-align: right;
  margin-bottom: 12px;
  padding-right: 15px;
}


.item__bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  box-sizing: border-box;

  height: 90rpx;
  padding: 0 20rpx;


}
.status,.status1 {  
  font-size:26rpx;
  font-weight:500;
  color:#FD6D01;
}
.status1{
  color: #666666;
}
.view__detail, .return__btn {
  width:150rpx;
  height:54rpx;
  border:1px solid rgba(156,156,156,1);
  border-radius:27px;
  font-size: 24rpx;
  color:#595959;
  display: flex;
  justify-content: center;
  align-items: center;
}
.return__btn {  
  background: #fff;
  border:1px solid rgba(253,109,1,1);
  border-radius:27px;
  color: #FD6D01;
}

.return_list{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #ffffff;
}
.return_address{
  width: 690rpx;
  display: flex;
  flex-direction: row;
  padding: 30rpx;
}
.return_label{
  color: #000916;
  font-size: 26rpx;
  font-weight: 500;
}
.return_detail{
  width: 77%;
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
}
.return_user{
  color: #595959;
  font-size: 26rpx;
  font-weight: 500;
}
.return_user text{
  color: #9c9c9c;
  margin-left: 30rpx;
}
.return_add{
  color: #595959;
  font-size: 26rpx;
  font-weight: 500;
  margin-top: 20rpx;
}
.return_logistics{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  margin-top: 20rpx;
}
.return__switch{
  width: 690rpx;
  padding: 0px 30rpx;
  border-bottom: #f7f7f7 solid 1rpx;
  height: 85rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.return__switch text{
  color: #000916;
  font-size: 26rpx;
  font-weight:500;
}
.return_right{
  width: 14rpx;
  height: 26rpx;
  position: absolute;
  right: 30rpx;
  top:30rpx; 
}
.picker{
  color: #cccccc;
  font-size: 26rpx;
  width: 550rpx;
  height: 85rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  margin-right: 30rpx;
}
.picker_select{
  color: #333333;
}
.return__switch input{
  font-size: 26rpx;
  width: 550rpx;
  height: 80rpx;
  line-height: 85rpx;
}
.return_submit{
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background: linear-gradient(to right,#fd7201,#fd7c02,#fd9302);
  color: #ffffff;
  font-size: 28rpx;
}
.no_order{
  width: 100%;
  height: calc(70vh);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.no_order_pic{
  width: 177rpx;
  height: 183rpx;
}
.no_order text{
  color: #999999;
  font-size: 32rpx;
  margin-top: 20rpx;
}


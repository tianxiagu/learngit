<!--pages/personal/personal.wxml-->
<view class='{{showModel==true?"filter":""}}'>
  <view class='my_top'>
    <view class='my_top_head'>
      <image src='{{userInfo.headImgUrl}}'></image>
      <view>{{userInfo.wxNickName}}</view>
    </view>
    <view class='address'>
      <text class='tel'>{{userInfo.mobile}}</text>
      <text bindtap='showModel'>{{userInfo.mobile==''?"添加手机号":"修改"}}</text>
      <view class='check_all_icon'></view>
    </view>
  </view>
  <view class='tab'>
    <view class="order" id="0" bindtap='toorder'>
      <text>我的订单</text>
      <view class='checkall' >
        <text>查看全部</text>
        <view class='goto'></view>
      </view>

    </view>
    <view class='tabOrder'>
      <view class='tabOrderItem' wx:for="{{tab}}" wx:key="index" bindtap='toorder' id="{{index}}">
        <image src='{{item.pic}}'></image>
        <text>{{item.name}}</text>
      </view>
    </view>

  </view>
  <view class='my_list_list' bindtap='{{isaddress===false?"chooseAddress":""}}'>
    <image class='my_list_pro' src='../../images/order/personallog.png'></image>
    <button wx:if="{{isaddress}}" open-type='openSetting' bindtap='{{isaddress===false?"":"getopenSetting"}}' class='my_list_lable service'>收货地址管理2</button>
    <view wx:else class='my_list_lable'>收货地址管理</view>
    <view class='my_icon'></view>
  </view>
  <view class='my_list_list' bindtap='bindViewproblem'>
    <image class='my_list_pro' src='../../images/order/service.png'></image>
    <button open-type='contact' class='my_list_lable service'>客服入口</button>
    <view class='my_icon'></view>
  </view>
</view>

<!-- 弹窗 -->

<view class="model" wx:if="{{showModel}}">
  <view>绑定手机号</view>
  <view class="agent_name">
    <view class="agent_phonecode">
      <input type="number" placeholder-class='placeholder' placeholder="请输入手机号" name="phone" bindinput="iptPhone" class="agent_ipt" maxlength="11" value="{{phoneNum}}" />
    </view>
    <view class="agent_phonecode">
      <input bindinput='iptCode' placeholder-class='placeholder' type="number" placeholder="" name="code" maxlength="6" class="agent_ipt" />
      <text class="agent_send" bindtap="sendCode" wx:if="{{isSend}}">获取验证码</text>
      <text class="agent_send" wx:else>{{time}}秒后发送</text>
    </view>

  </view>

  <button class="agent_btnopen" bindtap="phoneLogin">完成</button>
</view>
<view class='dely' wx:if="{{showModel}}" catchtap='showModel'>
</view>
/* pages/order/index.wxss */

page {
  background: rgba(245, 245, 245, 1);
  font-family: PingFang-SC-Bold;
}

.tab {
  padding: 27rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 1);
  font-family: PingFang-SC-Medium;
  background-color: #fff;
}

.item {
  margin-top: 20rpx;
  background-color: #fff;
}

.top {
  padding-top: 24rpx;
}

.shop {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  /* margin-bottom: 23rpx; */
  padding: 0 30rpx;
}

.shoplogo {
  width: 30rpx;
  height: 30rpx;
  background: linear-gradient(90deg, rgba(253, 109, 1, 1), rgba(252, 152, 3, 1));
  border-radius: 50%;
}

.shopgo {
  width: 21rpx;
  height: 29rpx;
  border-radius: 2px;
}

.shopName {
  font-size: 24rpx;
  color: rgba(0, 9, 22, 1);
  margin: 0 21rpx;
}

.goodspic {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  background-color: #eee;
}

.goods {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f7f7f7;
}

.goodsTitle {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goodsmsg {
  margin: 0 24rpx;
  width: 49%;
}

.goodsSzie text {
  display: inline-block;
  background: rgba(245, 245, 245, 1);
  border-radius: 4rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  padding: 6rpx 20rpx;
  margin-right: 20rpx;
  margin-top: 24rpx;
}

.time {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #666;
  margin-right: 10rpx;
}

.timer {
  padding: 0rpx 5rpx;
  border-radius: 8rpx;
}

.price {
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
}

.num {
  text-align: right;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(156, 156, 156, 1);
}

.total {
  margin:0 30rpx 10rpx 30rpx;
  text-align: right;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
}

.operation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(253, 109, 1, 1);
  font-size: 26rpx;
  border-top: 1px solid #eee;
  padding: 15rpx;
}

.time_action {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
}

.allbtn {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}

.allbtn view {
  width: 150rpx;
  height: 54rpx;
  border: 1px solid rgba(253, 109, 1, 1);
  border-radius: 27rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(253, 109, 1, 1);
  margin-right: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.allbtn .fail {
  border: 1px solid rgba(176, 174, 174, 1);
  color: rgba(102, 102, 102, 1);
}

.tab .choosed {
  color: rgba(253, 109, 1, 1);
}

/* 弹窗 */

.delModel {
  position: fixed;
  bottom: -384rpx;
  width: 100%;
  height: 384rpx;
  background-color: #fbfbfd;
  z-index: 100;
  animation: sport 0.3s ease-in-out forwards;
  transform: translateY(0px);
}

.delModel view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 33%;
  font-size: 26rpx;
  color: #333;
}

.delModel .sure {
  height: 28%;
  font-size: 28rpx;
  color: rgba(253, 109, 1, 1);
  border-bottom: 3px solid #e8e8ed;
  border-top: 1px solid #e7e7e9;
}

.dely {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
}

.lastitems {
  border: none;
}

.timeover {
  color: #f5f5f5;
}

.minuteover {
  background-color: #f5f5f5;
}

@keyframes sport {
  0% {
    bottom: -384rpx;
    opacity: 1;
  }

  100% {
    bottom: 0rpx;
    opacity: 1;
  }
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 28rpx;
  margin: 20rpx 0 20rpx 0;
}

.null {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  flex-direction: column;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #999;
}

.null image {
  width: 176rpx;
  height: 182rpx;
  /* background-color: #fff; */
  margin-bottom: 44rpx;
  margin-top: 195rpx;
}

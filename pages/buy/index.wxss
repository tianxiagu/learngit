page {
  background-color: #f7f7f7;
}

/* 选择地址 */

.select-address {
  padding: 0 30rpx;
  height: 190rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  position: relative;
}

.select-address-notext {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 41rpx;
  flex: 1;
}

.select-address-text {
  flex: 1;
}

.order-name {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 41rpx;
  margin-bottom: 30rpx;
}

.order-adress {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(89, 89, 89, 1);
  line-height: 37rpx;
}

.order-address-icon {
  width: 24rpx;
  height: 28rpx;
  vertical-align: top;
}

.select-address-arrow {
  flex: 0 0 14rpx;
  margin-left: 38rpx;
}

.select-address-arrow>image {
  width: 14rpx;
  height: 26rpx;
}

.select-address-cap {
  height: 6rpx;
  background: rgba(255, 255, 255, 1);
}

.select-address-cap>image {
  width: 100%;
  height: 6rpx;
  vertical-align: top;
}

.getaddress {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

/* 商品展示 */

.prolist {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 1);
}

.pro-item {
  padding: 34rpx 30rpx 30rpx;
  border-bottom: 1rpx solid rgba(247, 247, 247, 1);
}

.pro-shop {
  font-size: 0;
}

.shop-logo {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  vertical-align: top;
}

.shop-name {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 30rpx;
  margin-right: 20rpx;
}

.shop-arrow {
  width: 10rpx;
  height: 18rpx;
}

.pro-detail {
  margin-top: 23rpx;
  display: flex;
}

.pro-img {
  flex: 0 0 180rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10px;
  overflow: hidden;
}

.pro-img>image {
  width: 100%;
}

.pro-attr {
  flex: 1;
  margin-left: 24rpx;
}

.pro-text {
  display: flex;
}

.pro-name {
  flex: 0 0 311rpx;
  width: 311rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.pro-value {
  flex: 1;
  text-align: right;
}

.pro-price {
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 30rpx;
}

.pro-num {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(156, 156, 156, 1);
  line-height: 30rpx;
}

.pro-sku>text {
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
  height: 30rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 4rpx;
  padding: 0 17rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

/* 金额 优惠 运费支付方式 */

.additional-box {
  padding: 29rpx 30rpx 0;
  background: rgba(255, 255, 255, 1);
  border-bottom: 1rpx solid rgba(247, 247, 247, 1);
}

.additional-item {
  display: flex;
  padding-bottom: 30rpx;
}

.additional-item-name {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 43rpx;
}

.additional-item-value {
  flex: 1;
  text-align: right;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 43rpx;
}

/* 协议 */

.agreement {
  padding: 20rpx 30rpx 0;
  background: rgba(255, 255, 255, 1);
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(156, 156, 156, 1);
  line-height: 43rpx;
}

.agreement>text {
  color: rgba(0, 9, 22, 1);
}

/* 底部确认订单提交 */

.bottom-box::after {
  content: '';
  display: block;
  height: 120rpx;
  width: 100%;
  background: rgba(255, 255, 255, 1);
}

.bottom-detail {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 108rpx;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 1);
  box-sizing: border-box;
  padding: 0 30rpx;
}

.bottom-text {
  flex: 1;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 9, 22, 1);
  line-height: 30rpx;
}

.bottom-text>text {
  color: #fd6d01;
}

.btn-buy-submit {
  flex: 0 0 218rpx;
  width: 218rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(90deg, rgba(253, 109, 1, 1), rgba(252, 152, 3, 1));
  border-radius: 40rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}
